        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile</h4>
                </div>
                <div class="row mt-2">
                    
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Name</label><input type="text" class="form-control" placeholder="first name" value="<%=userData.username%>" readonly></div>
                    <div class="col-md-12"><label class="labels">Mobile Number</label><input type="text" class="form-control" placeholder="enter phone number" value="<%=userData.mobile%>" readonly></div>
                    <div class="col-md-12"><label class="labels">Email ID</label><input type="text" class="form-control" placeholder="enter email id" value="<%=userData.email%>"readonly></div>
                    
                </div>
                <div class="mt-5 text-center"><a href="/editAccount"><button class="btn btn-primary profile-button" type="button">Edit Profile</button></a></div>
                <!-- <div class="mt-5 text-center"><a href="/savedAddress"><button class="btn btn-primary profile-button" type="button">Saved Addresses</button></a></div> -->
                <div class="d-flex justify-content-between align-items-center mb-3 mt-4">
                    <h4 class="text-right">Address</h4>
                </div>

                <%for(let i=0;i<addressData.length  ;i++){ %>
                                <div class="card" style="width: 18rem;">
                                    <div class="card-body">
                                      <p class="card-text"><%= addressData[i].address %>, <%= addressData[i].pinCode %> <%= addressData[i].city %></p>
                                    </div>
                                </div>
                                <%}%>
                                
            </div>
        </div>
    </div>
