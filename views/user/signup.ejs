                    <label for="f-option2">Keep me logged in</label>
                  </div>
                </div> -->

            <div class="col-md-12 form-group">
              <button type="submit" value="submit" class="primary-btn">
                SIGN UP
              </button>
              <!-- <a href="#">Forgot Password?</a> -->
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
