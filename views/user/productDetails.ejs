<%-include('../includes/productDetailsNav')%>


    <% productData.forEach(product=>{ %>
	<!--================Single Product Area =================-->

	<div class="product_image_area mb-5 pb-5">
		<div class="container">
			<div class="row s_product_inner">
				<div class="col-lg-6">
					<div class="s_Product_carousel">
						
						<div class="single-prd-item mb-5">
							<img class="img-fluid" id="main-image" src="<%=product.imageUrl[0].url%>" alt="">
						</div>
						
					</div>
					<div style="display: flex; gap: 15px; cursor: pointer; align-items: center;">
						<% for(let i=0;i<product.imageUrl.length;i++){%>
							<div class=" single-prd-item">
								<img onclick="change_image(this)" class="img-fluid" src="<%=product.imageUrl[i].url%>" alt="">
							</div>
						<%}%>
					</div>
				</div>
				<div class="col-lg-5 offset-lg-1">
					<div class="s_product_text">
						<h3><%= product.title %></h3>
						<h2>â‚¹ <%= product.price %></h2>
						<ul class="list">
							<li><a class="active"><span>Category</span>: <%=product.category %></a></li>
							<!-- <li><a href="#"><span>Availibility</span> : In Stock</a></li> -->
						</ul>
						<p><%= product.description %></p>
