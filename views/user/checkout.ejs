          },
        };
        var rzp1 = new Razorpay(options);
        rzp1.on("payment.failed", function (response) {
        });
        rzp1.open();
      }



      function verifyPayment(payment, order) {
      $.ajax({
      url: "/verifyPayment",
      data: {
        payment,
        order,
      },
      method: "post",
      success: (response) => {
        if (response.success) {
          location.href = `/confirmation/${response.oid}`;
        } else {
          location.href = "/paymentFail";
        }
      },
    });
  }


  function cou(amount,userId) {
        const code = document.getElementById('coupon').value;
        $.ajax({
          url: "/couponcheck",
          method: "post",
          data: {
            code,
            amount,
            userId,
          },
          success: (response) => {
                if (response[0].success) {
                  swal("Coupon Added!", "You got a discount of Rs." + response[0].dis, "success")
                    .then(() => {
                      document.getElementById('discount').innerHTML = response[0].dis;
                      const total = Number(amount) - Number(response[0].dis);
                      document.getElementById('total').innerHTML = total;
                      applied(response[1].check);
                    });
                } else {
                  console.log("smdvhgaejhgbfjuwfgvewjwhecghewdcKYHFG");
                  swal("Error", response[0].message , "error")
                    .then(() => {
                          location.reload()
                  });
                }
            },
          });
      }
      function applied(data) {
        document.getElementById('coup_code').innerHTML = data.couponName;
        document.getElementById('per').innerHTML = data.discount;
        document.getElementById('amount').innerHTML = data.maxLimit;
        document.getElementById('applied').style.display = 'block';
        document.getElementById('apply').style.display = 'none';
      }
      function remove(totalPrice) {
        document.getElementById('applied').style.display = 'none';
        document.getElementById('apply').style.display = 'flex';
        document.getElementById('discount').innerHTML = 0;
        document.getElementById('total').innerHTML = totalPrice;
      }
      
</script>

