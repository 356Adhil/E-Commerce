            <div class="billing_details container">
                <div class="row ">
                   

                        <div class="col-lg-12">
                        <div class="order_box">
                            <h2>Your Order</h2>
                            <ul class="list">
                                <li><a >Product <span>Total</span></a></li>

                                <% for(let i=0;i<getProducts.length;i++){%>

                                <li><a ><%= getProducts[i].productData.title %><span class="middle" style="margin-left: 27%;">x<%= getProducts[i].quantity %></span> <span class="last">₹ <%= singleProductPrice[i].total %></span></a></li>

                                <%}%>

                            </ul>
                            <ul class="list list_2">
                                <li><a >Subtotal <span>₹ <%= totalPrice %></span></a></li>
                                <li><a >Shipping <span>₹ 55.00</span></a></li>
                                <li><a >Total <span>₹ <%= netPrice %></span></a></li>
                            </ul>
                            <div class="payment_item">
                                <div class="radion_btn">
                                    <input type="radio" id="f-option5" class="payButton" name="payment-method" value="COD" checked>
                                    <label for="f-option5">COD</label>
                                    <div class="check"></div>
                                </div>
                            </div>
                            <div class="payment_item active">
                                <div class="radion_btn">
                                    <input type="radio" id="f-option6" class="payButtoni" name="payment-method" value="Paypal">
                                    <label for="f-option6">Online Payment</label>
                                    <img src="img/product/card.jpg" alt="">
                                    <div class="check"></div>
                                </div>
                            </div>
                            <!-- <div class="creat_account">
                                <input type="checkbox" id="f-option4" name="selector">
                                <label for="f-option4">I’ve read and accept the </label>
                                <a href="#">terms & conditions*</a>
                            </div> -->
                            <div style="display: flex;justify-content: space-evenly;align-items: center;">
                            <button type="submit" value="submit" class="primary-btn">
                            Proceed to Pay
                              </button>

                          <button type="button" class="primary-btn" data-toggle="modal"
                          data-target="#exampleModal">
                            Add Address
                              </button>
                            </div>
                        </div>
                    
                    </div>

                </div>


                <section class="mt-5">
                    <div class="single-element-widget mt-5">
                        <div class="default-select" id="default-select">
                            <h5>Select Address</h5>
                            <select>
                                <%for(let i=0;i<addressData.length  ;i++){ %>
                            <option class="mt-3"><%= addressData[i].name %>, <%= addressData[i].address %>, <%= addressData[i].pinCode %>, <%= addressData[i].mobileNumber %></option>
                            <%}%>
                            </select>
                        </div>
                    </div>
                </section>
            </form>



