    <!--================Checkout Area =================-->
    <section class="checkout_area section_gap">
        <form id="payForm" class="row contact_form" action="/ProceedtoPay" method="post" novalidate="novalidate">

        <div class="container">
            <!-- <div class="cupon_area">
