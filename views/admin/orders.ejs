<%- include("../includes/adminheader.ejs") %>
			<main class="content">
				<div class="container-fluid p-0">

					<table class="table table-dark table-striped">
						<thead>
							<tr>
							  <th scope="col">No.</th>
							  <th scope="col">User Name</th>
							  <th scope="col">Order Id</th>
							  <th scope="col">Order Date</th>
							  <th scope="col">Payment Method</th>
							  <th scope="col">Payment Status</th>
							  <th scope="col">Order Status</th>
							  <th scope="col">Delivery Date</th>
							  <th scope="col">Total Amount</th>
							  <th scope="col">View</th>
							  <th scope="col">Edit</th>
							</tr>
						  </thead>
						  <tbody>
                            <%for(let i=0;i<orderDetails.length;i++){%>
							<tr>
                              <td><%=[i+1]%></td>
                              <td><%=orderDetails[i].userName%></td>
							  <td><a href="orderDetail/<%=orderDetails[i]._id%>" style="text-decoration: none; color:#fff;">#<%=orderDetails[i]._id%></a></td>
							  <td><%=orderDetails[i].orderOn%></td>
							  <td><%=orderDetails[i].paymentMethod%></td>
							  <td><%=orderDetails[i].paymentStatus%></td>
							  <td><%=orderDetails[i].orderStatus%></td>
							  <td><%=orderDetails[i].deliveryDate%></td>
							  <td><%=orderDetails[i].totalAmount%></td>
							  <td><a href="orderDetail/<%=orderDetails[i]._id%>" class="btn btn-success" style="text-decoration: none; color:#fff;">View</a></td>
							  <!-- <td><a href="" class="btn btn-success">Edit</a></td> -->
							  <td><a href="editOrder/<%=orderDetails[i]._id%>" class="btn btn-success">Edit</a></td>
							</tr>
                            <%}%>
						  </tbody>
					  </table>
				</div>
			</main>
		</div>
	</div>

