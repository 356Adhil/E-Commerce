<%- include("../includes/adminheader.ejs") %>
<link rel="stylesheet" href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">

<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
			<main class="content">
				<div class="container-fluid p-0">

					<table class="table table-dark table-striped display" id="table_id">
						<thead>
							<tr>
							  <th scope="col">Title</th>
							  <th scope="col">Category</th>
							  <th scope="col">Price</th>
							  <th scope="col">Size</th>
							  <th scope="col">Description</th>
							  <th scope="col">Stock</th>
							  <th scope="col">Image</th>
							  <th scope="col">Edit</th>
							  <th scope="col">Delete</th>
							</tr>
						  </thead>
						  <tbody>
                            <% product.forEach(productData=>{ %>
							<tr>
							  <!-- <th scope="row">1</th> -->
							  <td><%= productData.title %></td>
							  <td><%= productData.category %></td>
							  <td><%= productData.price %></td>
							  <td><%= productData.size %></td>
							  <td><%= productData.description %></td>
							  <td><%= productData.qty %></td>
							  <td><img style="width: 60px;" src="<%=productData.imageUrl[0].url%>" alt=""></td>
							  <td>
                                <a class="btn btn-success" href="/admin/editProduct/<%=productData._id%>">
                                      Edit
                                  </a>
                              </td>
							  <td>
                                <a class="btn btn-danger" href="/admin/deleteProduct/<%=productData._id%>" onclick="return confirm('CLICK OK TO DELETE')">
                                      Delete
                                  </a>
                              </td>
							</tr>
                            <%})%>
						  </tbody>
					  </table>
                      <div class="container mt-4" style="
                      display: flex;
                      align-content: center;
                      justify-content: space-around;
                      align-items: center;">
                        <a href="/admin/addProduct">
                          <button style="background-color: rgb(0, 175, 0); width: 300px;" 
                            class=" px-4 py-2 mt-4 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-red-600 border border-transparent rounded-lg active:bg-red-600 hover:bg-red-700 focus:outline-none focus:shadow-outline-red">
                            Add New
                          </button>
                        </a>
          </div>
				</div>
			</main>
		</div>
	</div>

	<script src="../../admin/js/app.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

	<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>
	<script>
		$(document).ready( function () {
		$('#table_id').DataTable();
	} );
	</script>

