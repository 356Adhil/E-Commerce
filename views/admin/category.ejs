<%- include("../includes/adminheader.ejs") %>
			<main class="content">
				<div class="container-fluid p-0">

					<table class="table table-dark table-striped">
						<thead>
							<tr>
							  <th scope="col">Category</th>
							  <th scope="col">Edit</th>
							  <th scope="col">Delete</th>
							</tr>
						  </thead>
						  <tbody>
                            <% category.forEach(categoryData=>{ %>
							<tr>
							  <td><%= categoryData.name %></td>
							  <td>
                                <a class="btn btn-success" href="/admin/editCategory/<%=categoryData._id%>">
                                      Edit
                                  </a>
                              </td>
							  <td>
                                <a class="btn btn-danger" href="/admin/deleteCategory/<%=categoryData._id%>" onclick="return confirm('CLICK OK TO DELETE')">
                                      Delete
                                  </a>
                              </td>
							</tr>
                            <%})%>
						  </tbody>
					  </table>
                      <div class="container mt-4" style="
                      display: flex;
                      align-content: center;
                      justify-content: space-around;
                      align-items: center;">
                        <a href="/admin/addCategory">
                          <button style="background-color: rgb(0, 175, 0); width: 300px;" 
                            class=" px-4 py-2 mt-4 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-red-600 border border-transparent rounded-lg active:bg-red-600 hover:bg-red-700 focus:outline-none focus:shadow-outline-red">
                            Add New
                          </button>
                        </a>
                      </div>
				</div>
			</main>
		</div>
	</div>

	<script src="../../admin/js/app.js"></script>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
